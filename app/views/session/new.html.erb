<div class="login">
  <div class="blur">
  </div>
  <div class="transparent">
    <h2>Login</h2>


    <% if flash[:error].present? %>
    <br>
    <%= flash[:error] %>
    <br><br>
    <% end %>

    <!-- use form_for because session is only a controller not a model -->
    <!-- this will submit POST login_path -->
    <%= form_tag(login_path, id: 'myLogin') do %>
      <%= label_tag :email  %>
       <%= email_field_tag :email %>
      <br>
      <br>
      <%= label_tag :password %>
       <%= password_field_tag :password %>
      <br>
      <br>
      <%= submit_tag('Login', id: 'loginBtn' ) %>

    <% end %>
  </div>
</div>
