
<% if flash[:errors].present?  %>
  <ul>
    <% flash[:errors].each do |error|   %>
      <li><%= error  %></li>
    <% end %>
  </ul>
<% end %>
<br><br>

<!-- multipart:true required for uploads files -->
<%= form_for @user, html: {multipart:true} do |f| %>

<%= f.label :name %>
<%= f.text_field :name %>
<br>

<%= f.label :email %>
<%= f.email_field :email %>
<br>

<%= f.label :password %>
<%= f.password_field :password %>
<br>

<%= f.label :password_confirmation %>
<%= f.password_field :password_confirmation %>
<br>

<%= f.label :is_instructor, "Yoga Instructor" %>
<%= f.text_field :is_instructor %>
<br>


<!-- < % = f.text_field :image %> -->
<%= f.label :image %>
<%= f.cl_image_upload :image %>

<br>

<%= f.submit %>

<% end %>
