
<% if flash[:errors].present?  %>
  <ul>
    <% flash[:errors].each do |error|   %>
      <li><%= error  %></li>
    <% end %>
  </ul>
<% end %>
<br><br>

<%= form_for @user do |f| %>

<%= f.label :name %>
<%= f.text_field :name %>
<br>

<%= f.label :email %>
<%= f.email_field :email %>
<br>

<%= f.label :password %>
<%= f.password_field :password %>
<br>

<%= f.label :password_confirmation %>
<%= f.password_field :password_confirmation %>
<br>

<!-- need to change this to uploading an image -->
<%= f.label :image %>
<%= f.text_field :image %>
<br>

<%= f.submit %>

<% end %>
