<!DOCTYPE html>
<html>
  <head>
    <title>Project1</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <h1>Sydney Yoga</h1>

  <nav>
  <% if @current_user.present? %>
      Welcome <%= link_to @current_user.name, user_path(@current_user.id) %>
      |
      <%= link_to 'Logout', login_path, method: 'delete' %>

    <% else %>
      <%= link_to 'Login', login_path %>
      |
      <%= link_to 'Create new account', new_user_path %>

  <% end %>

  </nav>

  <hr>
    <body>
      <%= yield %>
    </body>
  <hr>

  <footer>
    &copy; Karma Tree Co. 2019
  </footer>
</html>
