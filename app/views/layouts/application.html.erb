<!DOCTYPE html>
<html>
  <head>
    <title>Project1</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link href="https://fonts.googleapis.com/css?family=Roboto+Condensed&display=swap" rel="stylesheet">
    <%= cloudinary_js_config %>
    <link href="https://fonts.googleapis.com/css?family=Beth+Ellen&display=swap" rel="stylesheet">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
  </head>
  <body>
  <div>
    <div class="header-container">
      <div class="logo">
        <img src="https://www.pngkey.com/png/full/350-3500926_yoga-transparent-background-yoga-png.png" alt="logo" >
      </div><div class="sydneyYoga">
        <h1>Sydney Yoga</h1>
      </div>
    </div>

    <nav>
      <div id="leftNav">
        <ul>
          <% if @current_user.present? %>
            <li><%= link_to 'MY CLASSES', bookings_path %></li>

          <% end  %>

          <% if @current_user.present? && @current_user.is_instructor %>
            <li><%= link_to 'ADD CLASS', new_schedule_path %></li>

          <% end %>
            <li><%= link_to 'ALL CLASSES', schedules_path %></li>
        </ul>
      </div><div id="rightNav">
        <ul>
          <% if @current_user.present? %>
              <li>WELCOME, <%= link_to @current_user.name, user_profile_path %></li>

              <li><%= link_to 'LOGOUT', login_path, method: 'delete' %></li>

            <% else %>

              <li><%= link_to 'LOGIN', login_path %></li>

              <li><%= link_to 'SIGN UP', new_user_path %></li>
          <% end %>
        </ul>
      </div>
    </nav>
  </div>

  <!-- <div class="main"> -->

      <%= yield %>
  <!-- </div> -->



  <footer>
    &copy; 2019 Karma Tree Co.
  </footer>


  </body>
</html>
