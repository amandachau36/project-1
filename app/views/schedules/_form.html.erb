

<% if flash[:errors].present?  %>
  <ul>
    <% flash[:errors].each do |error|   %>
      <li><%= error  %></li>
    <% end %>
  </ul>
<% end %>
<br>
<br>



<%= form_for @schedule, html: {multipart:true, class: "form schedule"} do |f| %>


<%= f.text_field :title, placeholder: "Title", class: 'form-input'   %>
<br>


<%= f.text_field :duration, placeholder: "Duration (min)", class: 'form-input' %>
<br>

<%= f.text_field :level, placeholder: "Level", class: 'form-input'  %>
<br>


<%= f.text_area :description, placeholder: "Describe your class!", rows: 10, class: 'form-input'  %>
<br>
<br>

<%= f.label :start, 'Date and Time' %>
<br>
<%= f.datetime_field :start, class: 'form-input'  %>
<br>



<%= f.text_field :number_of_repeats, placeholder: "Number of times class reoccurs (eg. 0 for a single class)", class: 'form-input'  %>
<br>


<%= f.text_field :address, placeholder: "Address/Location", class: 'form-input'  %>
<br>

<%= f.label :image, "Upload class image", class: 'form-form'%>
<%= f.cl_image_upload :image %>
<br>
<br>


<%= f.submit class: 'btn book submit' %>

<% end %>
