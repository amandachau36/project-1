<h2> <%= @schedule.title %> </h2>

<p> <strong><%= @schedule.start.to_formatted_s(:short) %></strong>
  (<%= @schedule.duration %> min)
</p>

<p><Strong>Level: </Strong><%= @schedule.level %></p>
<p><Strong>Instructor: </Strong><%= @schedule.instructor %></p>

<p><%= @schedule.description %></p>

<% if @schedule.image.present?  %>
  <%= image_tag @schedule.image  %>
<% end %>

<%= link_to 'Book class', new_booking_path(params[:id]) %>
